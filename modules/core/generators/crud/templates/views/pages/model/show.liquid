---
slug: <%= modelNamePlural %>/:id
---
{% liquid

  assign <%= modelName %>_id = context.params.id | split: '-' | last
  function <%= modelName %> = 'queries/<%= modelNamePlural %>/find', id: <%= modelName %>_id
  if <%= modelName %>.id
    render 'theme/simple/<%= modelNamePlural %>/show', <%= modelName %>: <%= modelName %>
  else
    response_status 404
  endif
%}
