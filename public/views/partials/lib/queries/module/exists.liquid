{% comment %}
  Required params:
    - name string
    - type string (optional)
      it can be: module, theme
{% endcomment %}
{% liquid
  function modules = 'modules/core/lib/queries/registry/get', type: type
  assign theme_manager = modules | array_detect: machine_name: name

  if theme_manager
    return true
  endif

  return false
%}
