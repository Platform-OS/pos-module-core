{% comment %}
  params: @object
          @field_name
          @regexp
          @c
          @message
{% endcomment %}
{% liquid
  if allow_blank and object[field_name] == blank
    return c
  endif

  assign matches = object[field_name] | matches: regexp
  if matches != true
    assign msg = 'test.should.match' | t: given: given, expected: expected
    assign message = message | default: 'core.validation.matches' | t
    function c = 'modules/core/lib/helpers/register_error', contract: c, field_name: field_name, message: message
  endif
  return c
%}
